@model IEnumerable<crud.Models.Personel>

@{
    <!-- tytul strony -->
    ViewBag.Title = "Tytul strony";
}

<head>
    <!-- zalaczenie biblioteki globalnej style.css -->
    <link rel="Stylesheet" href="~/Content/style.css" type="text/css" />
</head>

<div class="naglowekStrony">
    Personel
</div>

<p>
    @Html.ActionLink("Create New", "CreatePersonel")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nazwaPersonelu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.czyUstalony)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nazwaPersonelu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.czyUstalony)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPersonel", new { id = item.idPersonelu }, new { @class = "btn btn-primary" } ) |
            @Html.ActionLink("Details", "DetailsPersonel", new { id = item.idPersonelu }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Delete", "DeletePersonel", new { id = item.idPersonelu }, new { @class = "btn btn-danger" })
        </td>
    </tr>
    }

</table>
