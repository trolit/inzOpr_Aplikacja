@model crud.Models.Wiadomosci

@{
    <!-- tytul strony (chodzi o zakladke) -->
    ViewBag.Title = "Tworzenie wiadomości";
}

<head>
    <!-- zalaczenie biblioteki globalnej style.css -->
    <link rel="Stylesheet" href="~/Content/style.css" type="text/css" />
</head>

<div class="naglowekStrony">
    <ol class="breadcrumb tloOkruszka">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Strona główna</a></li>
        <li class="breadcrumb-item active">Utwórz Zgłoszenie</li>
    </ol>
</div>

<!-- trzeba dać w kontener żeby nie przylegały do krawędzi ekranu -->
<div class="container">
    <!-- trzeba dać card-columns żeby były odstępy od siebie kart i div z klasą row aby było responsywne -->
    <div class="row">
        <!-- mx-auto centruje karty jak zmniejszysz ekran do sytuacji że będzie 1 karta w wierszu -->
        <div class="mx-auto col-md-6">
            <div class="card text-white" style="background-color: #2b6198;">
                <div class="card-body">
                    <h5 class="card-title text-center"><i class="fas fa-file-alt fa-7x"></i></h5>
                    <p class="card-text">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken();

                            <div style="font-family: 'Arima Madurai', sans-serif; font-size:90%;">

                                <div>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.imieNazwisko, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.imieNazwisko, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.imieNazwisko, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.adresEmail, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.adresEmail, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.adresEmail, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <!--
                                        Uwaga, ponizszy div odpowiada za wygenerowanie daty otrzymania zgloszenia -
                                        prosze go nie zmieniac! Ma byc niewidoczny i niezmieniony.
                                    -->
                                    <div class="form-group" style="display: none;">
                                        @Html.LabelFor(model => model.dataOdebrania, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.dataOdebrania, new { htmlAttributes = new { @class = "form-control", @value = DateTime.Now } })
                                            @Html.ValidationMessageFor(model => model.dataOdebrania, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.tekstWiadomosci, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.tekstWiadomosci, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.tekstWiadomosci, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group" style="margin-top: 30px;">
                                        <div class="col-md-offset-2 col-md-10">
                                            <button type="submit" style="background-color: Transparent; background-repeat:no-repeat; border: none; cursor:pointer; overflow: hidden; outline:none;"><i data-toggle="tooltip" data-placement="bottom" title="Wyślij wiadomość" class="btn btn-success fas fa-share-square fa-2x"></i></button>
                                            @Html.ActionLink(" ", "Index", null, null, new { @class = "btn btn-dark fas fa-angle-double-left fa-2x", @data_toggle = "tooltip", @data_placement = "bottom", title = "Wróć" })
                                        </div>
                                    </div>

                                    @section Scripts {
                                        @Scripts.Render("~/bundles/jqueryval")
                                    }
                                </div>
                            </div>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
