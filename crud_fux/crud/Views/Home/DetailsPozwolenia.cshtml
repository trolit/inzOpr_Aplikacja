@model crud.Models.Pozwolenie

@{
    <!-- tytul strony -->
    ViewBag.Title = "Szczegóły pozwolenia";
}

<head>
    <!-- zalaczenie biblioteki globalnej style.css -->
    <link rel="Stylesheet" href="~/Content/style.css" type="text/css" />
    
    <link href='http://fonts.googleapis.com/css?family=Arima+Madurai&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
</head>

<div class="naglowekStrony">
    <ol class="breadcrumb tloOkruszka">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Strona główna</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Pracownik", "Home")">Pracownicy</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Pozwolenia", "Home")">Pozwolenia</a></li>
        <li class="breadcrumb-item active">Szczegóły pozwolenia</li>
    </ol>
</div>

<div class="form-horizontal">
    <hr />
    <div class="col-lg-6 col-md-8 mx-auto jumbotron">
        <div style="font-family: 'Arima Madurai', sans-serif; font-size:130%; margin-top: 5%;">
            <div class="text-center" style="margin-bottom: 15px;">
                <i class="fas fa-info-circle fa-7x"></i>
            </div>
            <p class="text-center" style="font-weight: bold;">Szczegóły</p>
            <p class="text-justify" style="font-size: 75% !important">
                <i class="fas fa-exclamation-circle"></i> By edytować, kliknij przycisk "Edytuj"
            </p>
            <hr />
            <div>
                <dl class="dl-horizontal col-md-12" style="font-size: 75% !important">
                    <dt>
                        Nazwa
                    </dt>

                    <dd>
                        @Html.EditorFor(model => model.nazwa, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @disabled = "true" } })
                    </dd>

                    <dt>
                        Czy zdobyte?
                    </dt>

                    <dd class="text-left">
                        @Html.EditorFor(model => model.czyZdobyte, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @disabled = "true" } })
                    </dd>

                </dl>
            </div>
            <p>
                @Html.ActionLink("Wróć", "Pozwolenia", null, null, new { @class = "btn przyciskPowrot" })
                @Html.ActionLink("Edytuj", "EditPozwolenie", null, new { id = Model.idPozwolenia }, new { @class = "btn przyciskSterowania3" })
            </p>
        </div>
    </div>
</div>

