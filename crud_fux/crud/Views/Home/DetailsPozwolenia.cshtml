@model crud.Models.Pozwolenie

@{
    <!-- tytul strony -->
    ViewBag.Title = "Szczegóły pozwolenia";
}

<head>
    <!-- zalaczenie biblioteki globalnej style.css -->
    <link rel="Stylesheet" href="~/Content/style.css" type="text/css" />

    <link href='http://fonts.googleapis.com/css?family=Arima+Madurai&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
</head>

<div class="naglowekStrony">
    <ol class="breadcrumb tloOkruszka">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Strona główna</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Pracownik", "Home")">Pracownicy</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Pozwolenia", "Home")">Pozwolenia</a></li>
        <li class="breadcrumb-item active">Szczegóły pozwolenia</li>
    </ol>
</div>

<!-- trzeba dać w kontener żeby nie przylegały do krawędzi ekranu -->
<div class="container">
    <!-- trzeba dać card-columns żeby były odstępy od siebie kart i div z klasą row aby było responsywne -->
    <div class="row">
        <!-- mx-auto centruje karty jak zmniejszysz ekran do sytuacji że będzie 1 karta w wierszu -->
        <div class="mx-auto col-md-6">
            <div class="card text-white" style="background-color: #2b6198;">
                <div class="card-body">
                    <h5 class="card-title text-center"><i class="fas fa-info-circle fa-7x"></i></h5>
                    <p class="card-text">
                        <div style="font-family: 'Arima Madurai', sans-serif; font-size:90%;">
                            <div>
                                <dl class="dl-horizontal col-md-12" style="font-size: 75% !important">
                                    <dt>
                                        Nazwa
                                    </dt>

                                    <dd>
                                        @Html.EditorFor(model => model.nazwa, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @disabled = "true" } })
                                    </dd>

                                    <dt>
                                        Czy zdobyte?
                                    </dt>

                                    <dd class="text-left">
                                        @Html.EditorFor(model => model.czyZdobyte, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @disabled = "true" } })
                                    </dd>
                                </dl>
                                    
                                <div class="col-md-12 d-flex justify-content-center">
                                    @Html.ActionLink(" ", "EditPozwolenie", null, new { id = Model.idPozwolenia }, new { @class = "btn btn-warning fas fa-edit fa-2x col-md-5", @data_toggle = "tooltip", @data_placement = "bottom", title = "Edytuj wpis" })
                                    @Html.ActionLink(" ", "Pozwolenia", null, null, new { @class = "btn btn-dark fas fa-angle-double-left fa-2x col-md-5", @data_toggle = "tooltip", @data_placement = "bottom", title = "Wróć" })
                                </div>
                            </div>
                        </div>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>