@model crud.Models.Zgloszenia

@{
    <!-- tytul strony (w zakładce) -->
    ViewBag.Title = "Edycja zgłoszenia";
}

<head>
    <!-- zalaczenie biblioteki globalnej style.css -->
    <link rel="Stylesheet" href="~/Content/style.css" type="text/css" />
    <!-- tu mozesz zalaczyc swoja biblioteke css ale pamietaj zeby plik zrodlowy
         znajdowal sie w katalogu ~/Content/ tak jak wyżej! -->
    <link href='http://fonts.googleapis.com/css?family=Arima+Madurai&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
</head>

<div class="naglowekStrony">
    <ol class="breadcrumb tloOkruszka">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Strona główna</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Przelozony", "Home")">Przełożony</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Zgloszenia_Przelozony", "Home")">Zgłoszenia</a></li>
        <li class="breadcrumb-item active">Zgłoszenie @Html.DisplayFor(model => model.idOferty)</li>
    </ol>
</div>

<!-- trzeba dać w kontener żeby nie przylegały do krawędzi ekranu -->
<div class="container">
    <!-- trzeba dać card-columns żeby były odstępy od siebie kart i div z klasą row aby było responsywne -->
    <div class="row">
        <!-- mx-auto centruje karty jak zmniejszysz ekran do sytuacji że będzie 1 karta w wierszu -->
        <div class="mx-auto col-md-6">
            <div class="card text-white" style="background-color: #2b6198;">
                <div class="card-body">
                    <h5 class="card-title text-center"><i class="fas fa-clipboard-check fa-7x"></i></h5>
                    <p class="card-text">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div style="font-family: 'Arima Madurai', sans-serif; font-size:90%;">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.idOferty)

                                <div class="form-group">
                                    @Html.Label("Imię i nazwisko", htmlAttributes: new { @class = "control-label col-md-6" })
                                    <div class="col-md-10">
                                        <div>
                                            @Html.EditorFor(model => model.imie_nazwisko, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.imie_nazwisko, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label(" Firma", htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.firma, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.firma, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label("Numer telefonu", htmlAttributes: new { @class = "control-label col-md-6" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.nr_telefonu, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.nr_telefonu, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label(" Mail", htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.mail, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.mail, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label("Miejsce zamieszkania", htmlAttributes: new { @class = "control-label col-md-6" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.m_zamieszkania, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.m_zamieszkania, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" style="font-size: 75% !important">
                                    @Html.Label("Nazwa imprezy masowej", htmlAttributes: new { @class = "control-label col-md-6" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.nazwa_imprezy, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.nazwa_imprezy, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" style="font-size: 75% !important">
                                    @Html.Label("Rodzaj/treść", htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.rodzaj_tresc, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.rodzaj_tresc, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" style="font-size: 75% !important">
                                    @Html.Label("Proponowane miejsce realizacji", htmlAttributes: new { @class = "control-label col-md-6" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.miejsce_realizacji, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.miejsce_realizacji, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" style="font-size: 75% !important">
                                    @Html.Label("Czas trwania", htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.czas_trwania, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.czas_trwania, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" style="font-size: 75% !important">
                                    @Html.Label("Cykliczność", htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.cyklicznosc, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.cyklicznosc, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" style="font-size: 75% !important">
                                    @Html.Label("Charakter uczestnictwa", htmlAttributes: new { @class = "control-label col-md-6" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.charakter_uczestnictwa, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.charakter_uczestnictwa, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" style="font-size: 75% !important">
                                    @Html.Label("Forma organizacyjna", htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.forma_organizacyjna, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.forma_organizacyjna, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" style="font-size: 75% !important">
                                    @Html.Label(" Cele", htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.cele, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.cele, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" style="font-size: 75% !important">
                                    @Html.Label("Proponowany termin odbycia imprezy", htmlAttributes: new { @class = "control-label col-md-7" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.termin_odbycia, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.termin_odbycia, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" style="font-size: 75% !important">
                                    @Html.Label("Ceny biletów", htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.ceny_bilet, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ceny_bilet, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" style="font-size: 75% !important">
                                    @Html.Label("Dodatkowe usługi", htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.dod_uslugi, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.dod_uslugi, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group" style="font-size: 75% !important">
                                    @Html.Label("Stan zgłoszenia", htmlAttributes: new { @class = "control-label col-md-6" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.stanZgloszenia, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.stanZgloszenia, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <!-- Uwaga, ponizszy div odpowiada za wygenerowanie daty otrzymania zgloszenia -
                                prosze go nie zmieniac! Ma byc niewidoczny i niezmieniony. -->
                                <div class="form-group" style="display: none; font-size: 75% !important">
                                    @Html.LabelFor(model => model.dataOtrzymaniaZgloszenia, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.dataOtrzymaniaZgloszenia, new { htmlAttributes = new { @class = "form-control", @value = DateTime.Now } })
                                        @Html.ValidationMessageFor(model => model.dataOtrzymaniaZgloszenia, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button type="submit" style="background-color: Transparent; background-repeat:no-repeat; border: none; cursor:pointer; overflow: hidden; outline:none;"><i data-toggle="tooltip" data-placement="bottom" title="Wprowadź zmiany" class="btn btn-success fas fa-check-square fa-2x"></i></button>
                                        <!-- Back to List to nazwa przycisku, Zgloszenia_Przelozony to nazwa pliku na ktory ma przekierowywac-->
                                        @Html.ActionLink(" ", "Zgloszenia_Przelozony", null, null, new { @class = "btn btn-dark fas fa-angle-double-left fa-2x", @data_toggle = "tooltip", @data_placement = "bottom", title = "Wróć" })
                                    </div>
                                </div>
                            </div>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
