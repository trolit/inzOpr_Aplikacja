                <div class="form-group" style="font-size: 75% !important">
                    @Html.Label("Stan zgłoszenia(jeżeli akceptujesz - wpisz: akceptowany)", htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.stanZgloszenia, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.stanZgloszenia, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Uwaga, ponizszy div odpowiada za wygenerowanie daty otrzymania zgloszenia -
                    prosze go nie zmieniac! Ma byc niewidoczny i niezmieniony. -->
                <div class="form-group" style="display: none; font-size: 75% !important">
                    @Html.LabelFor(model => model.dataOtrzymaniaZgloszenia, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.dataOtrzymaniaZgloszenia, new { htmlAttributes = new { @class = "form-control", @value = DateTime.Now } })
                        @Html.ValidationMessageFor(model => model.dataOtrzymaniaZgloszenia, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Zapisz" class="btn btn-success" />
                        <!-- Back to List to nazwa przycisku, Zgloszenia_Przelozony to nazwa pliku na ktory ma przekierowywac-->
                        @Html.ActionLink("Wróć", "Zgloszenia_Przelozony", null, null, new { @class = "btn przyciskPowrot" })
                    </div>
                </div>

            </div>
        </div>
    </div> 
}
         
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
