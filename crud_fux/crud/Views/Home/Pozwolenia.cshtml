@model IEnumerable<crud.Models.Pozwolenie>

@{
    <!-- tytul strony -->
    ViewBag.Title = "Tytul strony";
}

<head>
    <!-- zalaczenie biblioteki globalnej style.css -->
    <link rel="Stylesheet" href="~/Content/style.css" type="text/css" />
</head>

<div class="naglowekStrony">
    Pozwolenia
</div>

<p>
    @Html.ActionLink("Utwórz nowy wpis", "CreatePozwolenie", new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.czyZdobyte)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.czyZdobyte)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPozwolenie", new { id = item.idPozwolenia }) |
            @Html.ActionLink("Details", "DetailsPozwolenia", new { id = item.idPozwolenia }) |
            @Html.ActionLink("Delete", "DeletePozwolenie", new { id = item.idPozwolenia })
        </td>
    </tr>
    }

</table>
