@model IEnumerable<crud.Models.Dokumentacja>

@{
    <!-- tytul strony -->
    ViewBag.Title = "Dokumentacja - projekt";
}

<head>
    <!-- zalaczenie biblioteki globalnej style.css -->
    <link rel="Stylesheet" href="~/Content/style.css" type="text/css" />
</head>

<div class="naglowekStrony">
    Dokumentacja
</div>

<p>
    @Html.ActionLink("Stwórz nową", "CreateDokumentacja", null, null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            Nazwa dokumentu
        </th>
        <th class="text-center">
            Czy ukończony?
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="parzysty nieparzysty">
            <td>
                @Html.DisplayFor(modelItem => item.nazwaDokumentu)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.czyUkonczony)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "EditDokumentacja", null, new { id = item.idDokumentu }, new { @class = "btn btn-primary przyciskWiekszy" })
                @Html.ActionLink("Szczegóły", "DetailsDokumentacja", null, new { id = item.idDokumentu }, new { @class = "btn btn-info przyciskWiekszy" })
                @Html.ActionLink("Usuń", "DeleteDokumentacja", null, new { id = item.idDokumentu }, new { @class = "btn btn-danger przyciskMniejszy" })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Wróć", "Pracownik", null, null, new { @class = "btn btn-primary btn-md przyciskPowrot" })