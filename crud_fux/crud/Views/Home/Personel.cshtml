@model IEnumerable<crud.Models.Personel>

@{
    <!-- tytul strony -->
    ViewBag.Title = "Personel - projekt";
}

<head>
    <!-- zalaczenie biblioteki globalnej style.css -->
    <link rel="Stylesheet" href="~/Content/style.css" type="text/css" />
</head>

<div class="naglowekStrony">
    Personel
</div>

<p>
    @Html.ActionLink("Utwórz nowy", "CreatePersonel", null, null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            Nazwa personelu
        </th>
        <th class="text-center">
            Czy ustalony?
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="parzysty nieparzysty">
            <td>
                @Html.DisplayFor(modelItem => item.nazwaPersonelu)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.czyUstalony)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "EditPersonel", new { id = item.idPersonelu }, new { @class = "btn btn-primary przyciskWiekszy" })
                @Html.ActionLink("Szczegóły", "DetailsPersonel", new { id = item.idPersonelu }, new { @class = "btn btn-info przyciskWiekszy" })
                @Html.ActionLink("Usuń", "DeletePersonel", new { id = item.idPersonelu }, new { @class = "btn btn-danger przyciskMniejszy" })
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Wróć", "Pracownik", null, null, new { @class = "btn btn-primary przyciskPowrot" })
