@model IEnumerable<crud.Models.Uczestnik>

@{
    <!-- tytul strony -->
    ViewBag.Title = "Lista uczestników";
}

<head>
    <!-- zalaczenie biblioteki globalnej style.css -->
    <link rel="Stylesheet" href="~/Content/style.css" type="text/css" />
</head>

<div class="naglowekStrony">
    Lista uczestników
</div>

<table class="table">
    <tr class="text-center">
        <th>
            Imię i nazwisko
        </th>
        <th>
            Mail
        </th>
        <th>
            Numer telefonu
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    { 
        <tr class="parzysty nieparzysty text-center">
            <td>
                @Html.DisplayFor(modelItem => item.imieNazwisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nrTelefonu)
            </td>
            <td>
                @Html.ActionLink("Zmień dane uczestnika", "EditUczestnik", new { id = item.idUczestnika }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Usuń uczestnika", "DeleteUczestnik", new { id = item.idUczestnika }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Wróć", "Przelozony_Listaimprez", null, null, new { @class = "btn btn-primary przyciskPowrot" })
