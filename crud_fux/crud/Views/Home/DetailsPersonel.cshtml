@model crud.Models.Personel

@{
    <!-- tytul strony -->
    ViewBag.Title = "Tytul strony";
}

<head>
    <!-- zalaczenie biblioteki globalnej style.css -->
    <link rel="Stylesheet" href="~/Content/style.css" type="text/css" />
</head>

<div class="naglowekStrony">
    Szczegóły wpisu
</div>

<div>
    <h4>Personel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nazwa personelu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nazwaPersonelu)
        </dd>

        <dt>
            Czy ustalony?
        </dt>

        <dd>
            @Html.DisplayFor(model => model.czyUstalony)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Wróć", "Pracownik", null, null, new { @class = "btn btn-primary btn-md przyciskPowrot" })
    @Html.ActionLink("Edytuj", "EditPersonel", null, new { id = Model.idPersonelu }, new { @class = "btn btn-success" })
</p>
