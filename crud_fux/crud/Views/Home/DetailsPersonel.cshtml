@model crud.Models.Personel

@{
    <!-- tytul strony -->
    ViewBag.Title = "Szczegóły - personel";
}

<head>
    <!-- zalaczenie biblioteki globalnej style.css -->
    <link rel="Stylesheet" href="~/Content/style.css" type="text/css" />
</head>

<div class="naglowekStrony">
    Szczegóły wpisu
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nazwa personelu
        </dt>

        <dd>
            @Html.EditorFor(model => model.nazwaPersonelu, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @disabled = "true" } })
        </dd>

        <dt>
            Czy ustalony?
        </dt>

        <dd>
            @Html.EditorFor(model => model.czyUstalony, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @disabled = "true" } })
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Wróć", "Personel", null, null, new { @class = "btn btn-primary btn-md przyciskPowrot" })
    @Html.ActionLink("Edytuj", "EditPersonel", null, new { id = Model.idPersonelu }, new { @class = "btn btn-info" })
</p>
